<configuration>
    <input>
        <gtfs>
            <file>../data/gtfs/</file>
        </gtfs>

        <osm>
            <file>../data/osm/finland-latest.osm.pbf</file>
        </osm>

        <stops>
            <file>../data/intermediate/gtfs_stops_snapped.geojson</file>
        </stops>
    </input>

    <output>
        <directory>../data/matsim/</directory>
        <network>network.xml</network>
        <schedule>transitSchedule.xml</schedule>
        <vehicles>vehicles.xml</vehicles>
        <stops>stops.xml</stops>
    </output>

    <options>
        <use-osm-routes>true</use-osm-routes>
        <prune-unconnected>true</prune-unconnected>
        <fix-stop-coordinates>false</fix-stop-coordinates>
    </options>
</configuration>
