<configuration>

    <!-- Path to your GTFS folder -->
    <basicGtfs inputFile="../data/gtfs/" />

    <!-- MATSim output -->
    <outputDirectory name="../data/matsim/" />

    <!-- Use GTFS shapes.txt for more accurate routes -->
    <convert useShapes="true" interpolate="true" />

    <!-- Pick a valid date from HSL calendar (example: Feb 10, 2025) -->
    <date start="20250210" end="20250210" />

</configuration>
