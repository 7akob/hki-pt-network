<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE config SYSTEM "http://www.matsim.org/files/dtd/config_v2.dtd">

<config>

    <module name="global">
        <param name="coordinateSystem" value="WGS84"/>
    </module>

    <module name="network">
        <param name="inputNetworkFile" value="network.xml"/>
    </module>

    <module name="transit">
        <param name="useTransit" value="false"/>
        <param name="transitScheduleFile" value="transitSchedule.xml"/>
        <param name="vehiclesFile" value="transitVehicles.xml"/>
    </module>

    <module name="plans">
        <param name="inputPlansFile" value="population.xml"/>
    </module>

    <module name="controller">
        <param name="outputDirectory" value="./output"/>
        <param name="lastIteration" value="0"/>
    </module>

    <module name="qsim">
        <param name="endTime" value="30:00:00"/>
    </module>

    <module name="scoring">
  <!-- Home activity -->
  <parameterset type="activityParams">
    <param name="activityType" value="home" />
    <!-- typical duration people "like" to stay at home -->
    <param name="typicalDuration" value="12:00:00" />
  </parameterset>

  <!-- Work activity -->
  <parameterset type="activityParams">
    <param name="activityType" value="work" />
    <!-- typical duration of work -->
    <param name="typicalDuration" value="08:00:00" />
  </parameterset>
</module>

</config>
